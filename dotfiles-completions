#!/bin/sh
set -e

# Completely stolen from [rbenv](https://github.com/sstephenson/rbenv).
COMMAND="$1"
if [ -z "$COMMAND" ]; then
  echo "usage: dotfiles completions COMMAND [arg1 arg2...]" >&2
  exit 1
fi

COMMAND_PATH="$(command -v "dotfiles-$COMMAND" || command -v "dotfiles-sh-$COMMAND")"
if grep -i "^# provide dotfiles completions" "$COMMAND_PATH" >/dev/null; then
  shift
  exec "$COMMAND_PATH" --complete "$@"
fi
