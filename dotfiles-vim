#!/bin/bash
set -e

# Create vim directories for backups.
mkdir -p "$HOME/.vim/{_backup,_temp}"

# Grab the vimplugins repo.
if [ ! -d "$HOME/.vim/bundle" ]; then
  git clone https://github.com/hecticjeff/vimplugins.git ~/.vim/bundle --recursive
else
  cd "$HOME/.vim/bundle"
  git submodule foreach git pull origin master
fi
