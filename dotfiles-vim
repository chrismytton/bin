#!/bin/bash
set -e

# Create vim directories for backups.
mkdir -p "$HOME/.vim/_backup"
mkdir -p "$HOME/.vim/_temp"

# Grab the vimplugins repo.
if [ ! -d "$HOME/.vim/bundle/vundle" ]; then
  echo "Cloning vundle"
  git clone --quiet https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
fi

vim +BundleInstall +qall
